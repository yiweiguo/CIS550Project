      <button onclick="myFunction3()" class="dropbtn3">CreditCard</button>
      <div id="myDropdown3" class="dropdown-content3">
        <a href= "#" onclick="myCre1()">Yes</a>
        <a href="#" onclick="myCre2()">No</a>
      </div>
      <button onclick="getResult()" class="dropbtn4">Get Result</button>
      <div class = "container" style = "background-image:url(http://patriotden.com/fotki/olympics/Olympic-Rings-soft.jpg); background-repeat:repeat-y; background-size: 100%">
        <div id = "result" class = "abc"></div>
      </div>
    <script type="text/javascript">
      var city = null;
      var Category = null;
      var acceptCre = null;
      var index = 0;
      function myCity1(){
        city = "Las Vegas";
        // window.alert(city);
        
